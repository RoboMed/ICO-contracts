{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016"],
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "removeComments": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "types": [ "node", "mocha" ]
  },
  "include": [
    "src/**/*",
    "typings/**/*",
    "./node_modules/web3-typescript-typings/index.d.ts"
  ]
}